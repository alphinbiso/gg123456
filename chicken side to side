chicken rod movement using UnityEngine;

public class SideToSide : MonoBehaviour
{
    public float speed = 2f;
    public float range = 3f;
    float startX;
    int direction = 1;

    void Start()
    {
        startX = transform.position.x;
    }

    void Update()
    {
        transform.Translate(Vector3.right * speed * direction * Time.deltaTime);

        if (transform.position.x > startX + range)
            direction = -1;
        else if (transform.position.x < startX - range)
            direction = 1;
    }
}
mutta random using UnityEngine;

public class eggmovement : MonoBehaviour
{
    public GameObject prefab;     // The prefab to spawn
    public Transform spawnPoint;  // Optional spawn position
    public float interval = 2f;   // Time between spawns

    void Start()
    {
        InvokeRepeating("SpawnObject", 0f, interval);  // Call every 'interval' seconds
    }

    void SpawnObject()
    {
        Vector3 pos = spawnPoint ? spawnPoint.position : transform.position;
        Instantiate(prefab, pos, Quaternion.identity);
    }
}
