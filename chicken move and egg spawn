using UnityEngine;

public class ChickenMovement : MonoBehaviour
{
    Rigidbody2D rb;
    public int egg;
    public GameObject eggprefab;
    public float speed = 50f;
    public float direction = 1; // 1 for right, -1 for left
    // Start is called once before the first execution of Update after the MonoBehaviour is created
    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
    }

    // Update is called once per frame
    void Update()
    {
        rb.MovePosition(rb.position + Vector2.right * direction * speed * Time.deltaTime);

        // Change direction when reaching limits
        if (rb.position.x >= 10)
            direction = -1;  // go left
        else if (rb.position.x <= -10)
        { direction = 1; }   // go 
        egg = Random.Range(0, 100);
        if (egg >= 98)
        {
            Instantiate(eggprefab, transform.position, transform.rotation);
        }
    }
    
    
    }
