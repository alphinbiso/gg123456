}

// (d) Destroy an object by keyboard input â€“ for input class is used
void Start()
{
}

void Update()
{
    if (Input.GetKeyDown(KeyCode.Space))
    {
        Destroy(gameObject);
    }
}

private void OnMouseDown()
{
    Destroy(gameObject);
}
